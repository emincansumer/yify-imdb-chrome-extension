{
  "manifest_version": 2,
  "name": "IMDB Yify Torrents",
  "description": "This extension shows yify torrent links on imdb page of a movie.",
  "version": "1.0",
  "permissions": [
    "https://yts.re/",
    "tabs",
    "webNavigation",
    "storage"
  ],
  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": { 
    "48": "icon48.png",
    "128": "icon128.png" 
  }
}